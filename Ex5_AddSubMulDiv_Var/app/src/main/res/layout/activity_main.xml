<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:text="So thu nhat"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/edtSo1"
        app:layout_constraintEnd_toStartOf="@+id/edtSo1"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtSo1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:hint="Moi nhap mot con so"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:text="So thu hai"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/edtSo2"
        app:layout_constraintEnd_toStartOf="@+id/edtSo2"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtSo2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="51dp"
        android:hint="Moi nhap mot con so"
        app:layout_constraintBottom_toTopOf="@+id/btnCong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/edtSo1" />


    <Button
        android:id="@+id/btnCong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="+"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnTru"
        app:layout_constraintEnd_toStartOf="@+id/btnTru"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnTru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="-"
        app:layout_constraintEnd_toStartOf="@+id/btnNhan"
        app:layout_constraintStart_toEndOf="@+id/btnCong"
        app:layout_constraintTop_toTopOf="@+id/btnNhan" />

    <Button
        android:id="@+id/btnNhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="45dp"
        android:text="*"
        app:layout_constraintBottom_toTopOf="@+id/edtKQ"
        app:layout_constraintEnd_toStartOf="@+id/btnChia"
        app:layout_constraintStart_toEndOf="@+id/btnTru" />

    <Button
        android:id="@+id/btnChia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnNhan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnNhan" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="Ket qua la:"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/edtKQ"
        app:layout_constraintEnd_toStartOf="@+id/edtKQ"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtKQ"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>